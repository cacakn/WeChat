}
.page__hd {
    padding: 10px 10px;
    border:1px solid white;
    border-radius: 12rpx 12rpx 0 0;
    box-shadow:0px 0px 1px  gray inset;
    background-color: white; 
}
.page-list{
  width: 99%;
