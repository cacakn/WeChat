/*视频播放导航菜单  */

.vui-menu {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: inline-block;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx 0 #d7d7d7;
  text-align: center;
  font-size: 32rpx;
}

.vui-menu-avtive {
  color: #a3d900 !important;
}

.vui-menu-item-3, .vui-menu-item-4, .vui-menu-item-5 {
  float: left;
  box-sizing: border-box;
  color: #868686;
  /* border-right: solid 1rpx #f8f6f6; */
}

.vui-menu-item-3 {
  width: 33.3%;
}

.vui-menu-item-4 {
  width: 25%;
}

.vui-menu-item-5 {
  width: 20%;
}

